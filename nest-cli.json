{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ecommerce-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ecommerce-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ecommerce-backend",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "ecommerce-backend": {
      "type": "application",
      "root": "apps/ecommerce-backend",
      "entryFile": "main",
      "sourceRoot": "apps/ecommerce-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ecommerce-backend/tsconfig.app.json"
      }
    },
    "env-config": {
      "type": "library",
      "root": "libs/env-config",
      "entryFile": "index",
      "sourceRoot": "libs/env-config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/env-config/tsconfig.lib.json"
      }
    },
    "hash": {
      "type": "library",
      "root": "libs/hash",
      "entryFile": "index",
      "sourceRoot": "libs/hash/src",
      "compilerOptions": {
        "tsConfigPath": "libs/hash/tsconfig.lib.json"
      }
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "payment": {
      "type": "application",
      "root": "apps/payment",
      "entryFile": "main",
      "sourceRoot": "apps/payment/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}