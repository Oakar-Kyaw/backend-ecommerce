generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/user" 
}

datasource db {
  provider = "postgresql"
  url      = env("USER_DB_URL")
}

model User {
  id                 Int                    @id @default(autoincrement())
  email              String                 @unique
  photoUrl           String?
  identification     String?
  firstName          String  
  middleName         String?
  lastName           String?            
  password           String
  phone              String                 
  role               Role                   @default(CUSTOMER)
  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
  isDeleted          Boolean                @default(false)
  dateOfBirth        DateTime?
  interest           String?
  salary             Int?
  bio                String?
}

enum Role {
  CUSTOMER
  ADMIN
  SALE
}
