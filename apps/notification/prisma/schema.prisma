generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/notification" 
}

datasource db {
  provider = "postgresql"
  url      = env("NOTIFICATION_DB_URL")
}

model NotificationToken {
  id         Int    @id @default(autoincrement())
  token      String
  role       Role   @default(CUSTOMER)
  userId     Int
  brandId    Int?
  branchId   Int?
}

enum Role {
  CUSTOMER
  ADMIN
  SALE
}