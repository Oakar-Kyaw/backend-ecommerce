events {
    worker_connections 1024;
}

http {
    upstream supacart_api {
        server supacart-gym-api:5000;   # Live API container
    }

    server {
        listen 80;
        server_name supagymbackend.duckdns.org;

        # Let's Encrypt verification
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Redirect HTTP to HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }

    server {
        listen 443 ssl;
        server_name supagymbackend.duckdns.org;

        # SSL certificates
        ssl_certificate /etc/letsencrypt/live/supagymbackend.duckdns.org/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/supagymbackend.duckdns.org/privkey.pem;

        # SSL settings
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers on;

        location / {
            proxy_pass http://supacart_api;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }
    }
}
